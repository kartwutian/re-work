    script.
      // 显示记录
      $("#my-records-btn").on("click",function(){
      $("section.bhz-mod-shadow").fadeIn(500);
      $("#my-records").show().animate({
      top: '20%',
      opacity: 1
      },500)
      });
      $("#game-rules-btn").on("click",function(){
      $("section.bhz-mod-shadow").fadeIn(500);
      $("#game-rules").show().animate({
      top: '20%',
      opacity: 1
      },500)
      });
      // 隐藏记录
      $("section.bhz-mod-shadow").on("click",function(){
      $("section.bhz-mod-shadow").fadeOut(500);
      $("#my-records").animate({
      top: '100%',
      opacity: 0
      },500,function(){
      $("#my-records").hide();
      });
      $("#game-rules").animate({
      top: '100%',
      opacity: 0
      },500,function(){
      $("#game-rules").hide();
      });
      })
      // len为投注按钮数
      var len =$(".bhz-mod-bet>.bhz-mod-bet-num").length;
      var arrUrl = ['../static/images/puke/puke-1.jpg',
      '../static/images/puke/puke-2.jpg',
      '../static/images/puke/puke-3.jpg',
      '../static/images/puke/puke-4.jpg',
      '../static/images/puke/puke-5.jpg',
      '../static/images/puke/puke-6.jpg',
      '../static/images/puke/puke-7.jpg',
      '../static/images/puke/puke-8.jpg',
      '../static/images/puke/puke-9.jpg',
      '../static/images/puke/puke-10.jpg',
      '../static/images/puke/puke-j.jpg',
      '../static/images/puke/puke-q.jpg',
      '../static/images/puke/puke-k.jpg',
      ];
      var randomNum = 0;
      function getRandomNum() {
      return Math.floor(Math.random()*13);
      }
      for(var i = 0; i<len; i++){
      $("#bet-btn-"+i).click(function(){
      $(this).addClass("clicked").siblings().removeClass("clicked");
      })
      }
      // 选大小
      $(".bmf-info-common").click(function(){
      $(this).addClass("selected").siblings().removeClass("selected");
      })
      // 开奖
      $(".bhz-mod-bet-btn").click(function(){
      randomNum = getRandomNum();
      $('.bhz-mod-flop-info.back').css('background-image','url('+arrUrl[randomNum]+')');
      // $.ajax({
      // })
      $('#card').addClass('rotate');
      $("#tip-02").show().animate({
      top: '74%'
      },1000)
      $("#for-tip").show()
      })
      // 重新初始化开奖
      $("#for-tip").click(function(){
      $('#card').removeClass('rotate');
      $("#tip-02").css("top","100%").hide();
      $(this).hide();
      })
